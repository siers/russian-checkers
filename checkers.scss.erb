#space.checkers {
  height: 480px;
  position: relative;
  background: url(<%= asset_path 'games/checkers/board.png' %>);

  @mixin turn($color) {
    &.#{$color}s-turn {
      .piece.#{$color} {
        $rgba: 0;
        $opa: 0.3;
        @if $color == black {
          $rgba: rgba(255, 255, 255, $opa);
        } @else {
          $rgba: rgba(192, 0, 255, $opa);
        }
        box-shadow: inset 0px 0px 3px 3px $rgba;
      }
    }
  }
  @include turn(white);
  @include turn(black);

  .piece {
    position: absolute;
    top: 60px;
    width: 60px;
    height: 60px;
    background: url(<%= asset_path 'games/checkers/pieces.png' %>);

    &.selected {
      background-color: rgba(255, 255, 255, 0.2);
    }
    &.queen.white {
      background-position: 0 -60px;
    }
    &.white {
      background-position: -60px -60px;
    }
    &.queen.black {
      background-position: 0px 0px;
    }
    &.black {
      background-position: -60px 0px;
    }
    &.ghost {
      background-position: 0px -120px;
    }

    // Since classes start with numbers, I'll prefix them with 'p'.
    // For the sake of consistency the letters will be prefixed as well.
    &.p1  { top: 0px; }
    &.p2  { top: 60px; }
    &.p3  { top: 120px; }
    &.p4  { top: 180px; }
    &.p5  { top: 240px; }
    &.p6  { top: 300px; }
    &.p7  { top: 360px; }
    &.p8  { top: 420px; }

    &.pa  { left: 420px; }
    &.pb  { left: 360px; }
    &.pc  { left: 300px; }
    &.pd  { left: 240px; }
    &.pe  { left: 180px; }
    &.pf  { left: 120px; }
    &.pg  { left: 60px; }
    &.ph  { left: 0px; }
  }
}
